[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	glog = log --graph
	tags = tag
	dif = diff --word-diff=color
[core]
	excludesfile = ~/.gitignore
	whitespace = blank-at-eol,blank-at-eof,space-before-tab
	pager = less -x5,9
[push]
	default = current
[branch]
	autosetuprebase = always
[color]
	diff = auto
	ui = auto
[diff]
	algorithm = patience
[color "diff"]
	whitespace = red reverse
[pull]
	rebase = true
[submodule]
	recurse = true
[include]
	path = ~/.gitconfiglocal
	path = ~/.gitconfiguser
[init]
	defaultBranch = main
